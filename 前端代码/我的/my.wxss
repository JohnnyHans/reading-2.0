/* pages/my/my.wxss */

.first{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height:540rpx;
  background-color: rgb(255, 254, 247);
}

.my_board{
  width: 88%;
  height: 260rpx;
  position: absolute;
  align-self: center;
  margin-top: 80rpx;
  border: 1rpx solid rgb(240, 240, 240);
  border-radius: 20rpx;
  box-shadow:0rpx 1px 0rpx rgb(218, 218, 218);
  background-color: rgb(255, 255, 255);
}

.gui {
  position: relative;
  align-self: center;
  width: 208rpx;
  height: 208rpx;
  font-size: 24rpx;
  line-height: 208rpx;
  margin-bottom: 80rpx; 
  border: 1rpx solid rgba(221, 221, 221, 0.521);
  border-radius: 250rpx;
  box-shadow:0rpx 1px 0rpx rgb(218, 218, 218);
}

.my_head{
  position: relative;
  align-self: center;
  width: 208rpx;
  height: 208rpx;
  margin-bottom: 80rpx;
}

.rank{
  width: 90%;
  height: auto;
  margin-top: 60rpx;
  display: flex;
  flex-direction: row;
  position: absolute;
}
.rank-content{
  width: 50%;
  font-family:  Arial, Helvetica, sans-serif;
  font-size: 34rpx;
  text-align: center;
  color: #ccc;
  }

.count{
  display: flex;
  flex-direction: row;
  justify-content: space-evenly;
  justify-items: center;
  position: absolute;
  margin-top: 140rpx;
  width: 90%;
}
.queue{
  width: 50%;
  font-size: 48rpx;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  align-self: center;
}
.score{
  width: 50%;
  font-size: 48rpx;
  font-family: Arial, Helvetica, sans-serif;
  text-align: center;
  border-left: 1rpx solid rgb(231, 231, 231);
}

.my_midhook{
  position: relative;
  width: 818rpx;
  height: 20rpx;
  border: 1rpx solid rgb(219, 219, 219);
  box-shadow: 0rpx 0rpx 1rpx #ccc inset;
  background-color: rgb(218, 218, 218);
}

.my_tboard{
  display: flex;
  flex-direction: column;
  width: 100%;
  height: 760rpx;
  padding-top: 60rpx;
  background-color: rgb(255, 254, 247);
}

.tboard_item{
  width: 95%;
  height: 148rpx;
  display: flex;
  flex-direction: row;
  align-self: center;
  justify-content: center;
  align-items: center;
  margin-bottom: 8rpx;
  border-radius: 10rpx;
  border-bottom: 1rpx solid rgb(243, 243, 243);
  background-color: rgb(255, 255, 255);
  border-top: 1rpx solid rgb(245, 245, 245);
}

.left{
  display: flex;
  flex-direction: row;
  align-items: center;
  width: 88%;
}
.tboard_icon{
  position: relative;
  width: 66rpx;
  height: 66rpx;
}
.tboard_content{
  position: relative;
  font-family:  Arial, Helvetica, sans-serif;
  font-size: 36rpx;
  text-align: left;
  color: rgb(184, 184, 184);
  margin-left: 20rpx;
}

.right{
  display: flex;
  flex-direction: row;
  align-items: center;
}
.click_name{
  font-family:  Arial, Helvetica, sans-serif;
  font-size: 28rpx;
  color: rgb(219, 219, 219);
}
.tboard_click{
  width: 16rpx;
  height: 28rpx;
  margin-left: 4rpx;
}

.box{
  position: fixed;
  top: 0;
  bottom: 0;
  width: 100%;
  background: rgba(0, 0, 0, 0.3);
  padding-top: 20px;
  z-index: 2;
}

.comp{
  font-size: 24rpx;
  color: rgb(119, 77, 77);
  text-align: center;
  padding: 28rpx;
  margin-top: 20rpx;
  letter-spacing: 4Ï€rpx;
}